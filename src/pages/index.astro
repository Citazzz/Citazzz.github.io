---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Terminal, Cpu, Activity, ArrowRight } from 'lucide-react';
import DecodeText from '../components/ui/DecodeText.jsx';
import SciCard from '../components/ui/SciCard.jsx'; // 引入新卡片
---

<BaseLayout title="Dashboard">
    <!-- Hero 区域 -->
    <div class="mb-16 pt-10 relative">
        <!-- 背景大字装饰 -->
        <div class="absolute -top-10 -left-10 text-9xl font-black text-gray-200/50 select-none pointer-events-none z-0 opacity-30">
            2025
        </div>

        <div class="relative z-10">
            <div class="text-rhine-green font-mono text-sm mb-2 flex items-center gap-2">
                <span class="w-2 h-2 bg-rhine-green rounded-full animate-pulse"></span>
                SYSTEM_ONLINE
            </div>
            
            <h1 class="text-5xl md:text-7xl font-black text-rhine-dark mb-6 tracking-tighter leading-[1.1]">
                HELLO, WORLD.<br>
                I AM <DecodeText client:load text="CITAZZZ" className="text-transparent bg-clip-text bg-gradient-to-r from-rhine-green to-emerald-600" delay={500} />
            </h1>
            
            <p class="max-w-xl text-gray-500 text-lg leading-relaxed border-l-2 border-rhine-green pl-6">
                北京大学元培学院计算机方向 2025 级本科生。
                <br>这里是我的个人博客，记录算法、代码与生活。
            </p>
        </div>
    </div>

    <!-- 数据卡片区：使用 SciCard -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        
        <SciCard href="/blog" className="p-8 h-64 flex flex-col justify-between group">
            <div>
                <div class="mb-4 text-gray-400 group-hover:text-rhine-green transition-colors">
                    <Terminal size={32} />
                </div>
                <h3 class="text-2xl font-bold mb-2 text-rhine-dark">Archives</h3>
                <p class="text-sm text-gray-500">查阅技术笔记与算法题解。</p>
            </div>
            <div class="flex justify-end">
                <ArrowRight className="text-gray-300 group-hover:text-rhine-green group-hover:translate-x-2 transition-all" />
            </div>
        </SciCard>

        <SciCard href="/profile" className="p-8 h-64 flex flex-col justify-between group">
            <div>
                <div class="mb-4 text-gray-400 group-hover:text-rhine-green transition-colors">
                    <Cpu size={32} />
                </div>
                <h3 class="text-2xl font-bold mb-2 text-rhine-dark">Operator Data</h3>
                <p class="text-sm text-gray-500">查看个人技能栈与项目履历。</p>
            </div>
            <div class="flex justify-end">
                <ArrowRight className="text-gray-300 group-hover:text-rhine-green group-hover:translate-x-2 transition-all" />
            </div>
        </SciCard>

        <!-- Github 卡片：保持深色背景以示区别，但加上 SciCard 的装饰 -->
        <SciCard href="https://github.com/Citazzz" className="p-8 h-64 flex flex-col justify-between group !bg-rhine-dark !border-rhine-dark">
            <div>
                <div class="mb-4 text-rhine-green">
                    <Activity size={32} />
                </div>
                <h3 class="text-2xl font-bold mb-2 text-white">GitHub Activity</h3>
                <p class="text-sm text-gray-400">链接至远程代码仓库。</p>
            </div>
            <div class="flex justify-end">
                <ArrowRight className="text-rhine-green group-hover:translate-x-2 transition-all" />
            </div>
        </SciCard>

    </div>
</BaseLayout>